<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin List Item</title>
</head>
<body>
    <h3>Panel Admin</h3>
    <a href="/admin/listitems"><button>List Item</button></a>
    <a href="/admin/listsold"><button>List Sold</button></a><br>
    <br><a href="/admin/additem"><button>Add item</button></a><br>
    <br>
    <form action="/admin/listitems?search=" method="get">
        <label for="search"></label>
        <input type="text" id="search" name="search">
        <input type="submit" value="Search">
      </form> 
    <br>
    <table border="1px">
        <tr>
            <th>No</th>
            <th>Nama</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Category</th>
            <th>Action</th>
        </tr>
        <% data.forEach((el, Index) => {%>
            <tr>
                <td><%= Index +1%></td>
                <td><%= el.name%></td>
                <td><%= el.price%></td>
                <td><%= el.stock%></td>
                <td><%= el.category.name%></td>
                <td><a href="/admin/listitems/<%=el.id%>/edit"><button>Edit</button></a></td>
                
            </tr>
        <%})%>
    </table>
    
</body>
</html>